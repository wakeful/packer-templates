{
  "variables": {
    "kickstart": "ks-centos7x64.cfg",
    "name": "centos7x64",
    "ssh_name": "root",
    "ssh_pass": "toorroot"
  },

  "builders": [{
    "boot_command": [
      "<esc><wait>",
      "vmlinuz initrd=initrd.img ",
      "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `kickstart`}} ",
      "cmdline",
      "<enter>"
    ],
    "boot_wait": "10s",

    "disk_size": 12288,
    "format": "ovf",
    "guest_additions_mode": "upload",
    "guest_os_type": "RedHat_64",
    "headless": true,

    "iso_url": "http://mirror.sov.uk.goscomb.net/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso",
    "iso_checksum_url": "http://mirror.sov.uk.goscomb.net/centos/7/isos/x86_64/sha256sum.txt",
    "iso_checksum_type": "sha256",

    "http_directory": "public",
    "http_port_min": 9980,
    "http_port_max": 9980,

    "ssh_username": "{{user `ssh_name`}}",
    "ssh_password": "{{user `ssh_pass`}}",
    "ssh_pty": true,
    "ssh_wait_timeout": "25m",

    "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",

    "type": "virtualbox-iso",

    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "2048"],
      ["modifyvm", "{{.Name}}", "--vram", "8"]
    ],

    "vm_name": "{{user `name`}}"
  }],

  "post-processors": [{
    "keep_input_artifact": false,
    "output": "build/vagrant-{{user `name`}}.box",
    "type": "vagrant"
  }],

  "provisioners": [{
    "type": "shell",
    "scripts": [
      "provision/linux-vagrant.sh",
      "provision/rhel-update.sh",
      "provision/rhel-vbox-additions.sh",
      "provision/rhel-clean.sh",
      "provision/zero-disk.sh"
    ]
  }]
}
