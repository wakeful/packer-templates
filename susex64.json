{
  "variables": {
    "kickstart": "ks-susex64.xml",
    "name": "SUSEx64",
    "ssh_name": "root",
    "ssh_pass": "vagrant"
  },

  "builders": [{
    "boot_command": [
      "<esc><enter><wait>",
      "linux ",
      "biosdevname=0 ",
      "net.ifnames=0 ",
      "netdevice=eth0 ",
      "netsetup=dhcp ",
      "lang=en_US ",
      "textmode=1 ",
      "autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `kickstart`}} ",
      "<enter><wait>"
    ],
    "boot_wait": "10s",

    "disk_size": 12288,
    "format": "ovf",
    "guest_additions_mode": "disable",
    "guest_os_type": "OpenSUSE_64",
    "headless": true,

    "iso_url": "http://download.opensuse.org/tumbleweed/iso/openSUSE-Tumbleweed-DVD-x86_64-Current.iso",
    "iso_checksum_url": "http://download.opensuse.org/tumbleweed/iso/openSUSE-Tumbleweed-DVD-x86_64-Current.iso.sha256",
    "iso_checksum_type": "sha256",

    "http_directory": "public",
    "http_port_min": 9980,
    "http_port_max": 9980,

    "ssh_username": "{{user `ssh_name`}}",
    "ssh_password": "{{user `ssh_pass`}}",
    "ssh_pty": true,
    "ssh_wait_timeout": "25m",

    "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",

    "type": "virtualbox-iso",

    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "2048"],
      ["modifyvm", "{{.Name}}", "--vram", "8"]
    ],

    "vm_name": "{{user `name`}}"
  }],

  "post-processors": [{
    "keep_input_artifact": false,
    "output": "build/vagrant-{{user `name`}}.box",
    "type": "vagrant"
  }],

  "provisioners": [{
    "type": "shell",
    "scripts": [
      "provision/linux-vagrant.sh",
      "provision/suse-repo.sh",
      "provision/zero-disk.sh"
    ]
  }]

}
